@import './global.styl'

.box
  //float left
  background-color white
  padding 5px
  margin 10px
  box-shadow 0 5px 7px #aaa



#title
  font-family: 'archive-tilt'
  font-size: 10vw
  height 100%
  padding 10px
  line-height: .8
  word-wrap break-word

  @media small { font-size: 30vw}
  @media medium { font-size: 25vw}



//#main
//  height 200px




#main
  display: flex
  //flex-direction: row

  @media small {flex-direction: column}
  @media medium {flex-direction: column}
  @media large {flex-direction: row}
  @media xlarge {flex-direction: row}

#side
  flex 1 5

#content
  flex 5 1


