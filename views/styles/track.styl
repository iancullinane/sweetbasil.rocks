
// Meta object to be extended
.track__text
  .track--title
    font-family: roboto
    margin-bottom 3px

  .track--artist
    font-family work-sans
    @media small { font-size: 5vw}
    @media medium { font-size: 3vw}

  .track--time
    font-family: roboto

.btn-track
  height 3em
  background-color: #CF4222;
  color white
  font-family: roboto;
  font-size: 20px;
  align-content: flex-end;

.current
  @extend.box
  font-size: 6vw
  font-family: roboto

  @media medium { font-size: 3vw}
  @media large { font-size: 3vw}

.past
  @extend.box
  font-size: 6vw
  font-family: roboto

  @media medium { font-size: 3vw}
  @media large { font-size: 4vw}

.track
  @extend.track__text
  @extend.box
  display flex
  flex-direction column

  @media small { flex-direction: column}
  @media medium { flex-direction: row}
  @media large { flex-direction: row}
  @media xlarge { flex-direction: row}


.track--info
  flex 1 1
  //width: 100%


.track--meta
  flex 5 1

.track--link
  flex 0 1 10%
  align-self: flex-end
  justify-content: flex-end

.artistLink
  width: 100%
  color white
  font-family: roboto
  font-size: 3vw
  background-color: color4

  @media medium { font-size: 2vw}
  @media large { font-size: 2vw}



.track--image
  width 25%
  @media small { width: 100%}

  img
    width 100%
    padding 5px
    float left

.clearfix::before,
.clearfix::after {
  flex-basis: 0;
  order: 1;
}
