.current
  @extend.box
  font-size: 8vw
  font-family: roboto

  @media medium { font-size: 3vw}
  @media large { font-size: 3vw}
  @media xlarge { font-size: 3vw}

.past
  @extend.box
  font-size: 8vw
  font-family: roboto

  @media medium { font-size: 3vw}
  @media large { font-size: 4vw}
  @media xlarge { font-size: 3vw}



.clearfix::before,
.clearfix::after {
  flex-basis: 0;
  order: 1;
}
